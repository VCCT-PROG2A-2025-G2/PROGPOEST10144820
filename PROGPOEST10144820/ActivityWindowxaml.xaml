<Window x:Class="PROGPOE.ActivityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Log" Height="500" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Activity Log Viewer" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Filter and Control Section -->
        <GroupBox Grid.Row="1" Header="Log Controls" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Filter:" 
                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="FilterTextBox" Grid.Row="0" Grid.Column="1" 
                         Height="25" Margin="0,0,10,0" 
                         ToolTip="Enter text to filter activities"/>
                <Button x:Name="FilterButton" Grid.Row="0" Grid.Column="2" 
                        Content="Apply Filter" Width="90" Height="25" 
                        Margin="0,0,10,0"/>
                <Button x:Name="ClearFilterButton" Grid.Row="0" Grid.Column="3" 
                        Content="Clear" Width="60" Height="25"/>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="4" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="RefreshButton" Content="Refresh Log" 
                            Width="100" Height="30" Margin="0,0,10,0" 
                            Click="RefreshButton_Click"/>
                    <Button x:Name="ClearLogButton" Content="Clear Log" 
                            Width="100" Height="30" Margin="0,0,10,0" 
                            Click="ClearLogButton_Click"/>
                    <Button x:Name="ExportLogButton" Content="Export Log" 
                            Width="100" Height="30"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Activity List Section -->
        <GroupBox Grid.Row="2" Header="Recent Activities">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ListBox x:Name="ActivitiesListBox" 
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SelectionMode="Extended">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" 
                                    Padding="5" Margin="0,2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:MM/dd/yyyy HH:mm:ss}'}" 
                                                   FontWeight="SemiBold" FontSize="12" 
                                                   Foreground="DarkBlue"/>
                                        <TextBlock Text=" - " FontSize="12"/>
                                        <TextBlock Text="{Binding ActivityType}" 
                                                   FontWeight="SemiBold" FontSize="12" 
                                                   Foreground="DarkGreen"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Text="{Binding Activity}" 
                                               FontSize="13" Margin="0,2,0,0" 
                                               TextWrapping="Wrap"/>

                                    <TextBlock Grid.Row="2" Text="{Binding Details}" 
                                               FontSize="11" Foreground="Gray" 
                                               Margin="0,2,0,0" TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Fallback for simple string display -->
                <TextBox x:Name="ActivityTextBox" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="12"
                         Background="WhiteSmoke"
                         Visibility="Collapsed"/>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Activity log loaded"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total Activities: "/>
                    <TextBlock x:Name="ActivityCountTextBlock" Text="0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>